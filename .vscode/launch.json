{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // Point this to your compiled Javascript entry file
            "program": "${workspaceFolder}/dist/server.js", 
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                // Point this to your compiled Javascript output directory
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true
        }
    ]
} 